<button-a>
    <button type="button" onclick={ handleClick }>click me!!</button>

    <script>
        export default {
            onBeforeMount(props) {
                props.observable.on('click nancy', (name) => {
                    alert(`Hi ${name}!!`)
                })
            },
            handleClick() {
                this.props.observable.trigger('click john', 'Nancy')
            }
        }
    </script>
</button-a>