<button-b>
    <button type="button" onclick={ handleClick }>click me!!</button>

    <script>
        export default {
            onBeforeMount(props) {
                props.observable.on('click john', (name) => {
                    alert(`Hi  ${name}!!`)
                })
            },
            handleClick() {
                this.props.observable.trigger('click nancy', 'John')
            }
        }
    </script>
</button-b>